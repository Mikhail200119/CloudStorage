@using CloudStorage.Web.Models
@using CloudStorage.Web.Helpers

@model IEnumerable<FileViewModel>

<style>
    #myOverlay {
        position: fixed;
        display: none;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0,0,0,0.5);
        z-index: 2;
        cursor: default;
    }
</style>

<div id="myOverlay"></div>

<div id="files">
    <table class="table">
        @{
            var chunkSize = Model.Count() >= 5 ? 5 : Model.Count();
        }

        @if (chunkSize > 0)
        {
            @foreach (var filesChunk in Model.Chunk(chunkSize))
            {
                <tr>
                    @foreach (var file in filesChunk)
                    {
                        var fileSrc = @Url.Action("GetFile", "Files", new { id = file.Id, contentType = file.ContentType });

                        <td>
                            <div class="myFile" ondblclick="handleFileDoubleClick('@fileSrc', '@file.ContentType')">

                                @switch (file.ContentType)
                                {
                                    case FileContentTypes.Image.Png:
                                        <img src="image icon.png" alt="" height="50px" width="50px"/>
                                        break;
                                    case FileContentTypes.Video.Mp4:
                                        <img src="video icon.jpg" alt="" height="50px" width="50px" />
                                        break;
                                }

                                <h6>@file.Name</h6>
                                
                                <form asp-controller="Files" asp-action="Delete" asp-route-id="@file.Id" method="post">
                                    <button type="submit" class="border-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    }
                </tr>
            }
        }
    </table>
</div>

@Html.ActionLink("Upload new file...", "Create", "Files")

<script src="js/displayImage.js"></script>